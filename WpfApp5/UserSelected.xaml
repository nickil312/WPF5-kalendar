<UserControl x:Class="WpfApp5.UserSelected"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp5"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ImageBox" Source="/cross.png"/>
        <TextBlock x:Name="TextBlock" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" FontSize="40" VerticalAlignment="Center" Width="214" Height="65"/>

    </Grid>
</UserControl>
